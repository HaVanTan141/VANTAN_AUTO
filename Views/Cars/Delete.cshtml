@model VANTAN_AUTO.Models.Car

@{
    ViewData["Title"] = "Xóa xe";
}
<h1>Bạn có thực sự muốn xóa?</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên xe:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Title)</dd>

        <dt class="col-sm-2">Năm ra mắt:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ReleaseDate)</dd>

        <dt class="col-sm-2">Loại Xe:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Genre)</dd>

        <dt class="col-sm-2">Giá:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>

        <dt class="col-sm-2">Ảnh:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ImageUrl)</dd>

        <dt class="col-sm-2">Mô tả:</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> 
        
    </form>
</div>
<style>
    body {
        background: linear-gradient(to right, #141E30, #243B55);
        font-family: 'Poppins', sans-serif;
        color: white;
    }

    h1.display-4 {
        color: red;
        font-weight: bold;
        color: white;
    }

    .card-body .row .col-sm-2,
    .card-body .row .col-sm-10 {
        color: black;
    }
</style>